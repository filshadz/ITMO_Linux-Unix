#!/bin/sh

HOST=localhost
PORT=1234

FILE=/tmp/main
FILE1=/tmp/main1
FILE2=/tmp/main2
ERROR=/tmp/main-err

GETTEXT="gettext -d Time-fi"


help () {
        echo "Usage: $0 [ host [port] | --help ]"
}

end () {
	rm -f $FILE $FILE1 $FILE2 $ERROR
	exit
}

if [ $# -eq 1 ]
then
        if [ "$1" = "--help" ]
        then
                help
                exit -1
        else
                HOST=$1
        fi
elif [ $# -eq 2 ]
then
        PORT=$2
elif [ $# -ge 3 ]
then
	help
	exit -1
fi


MAIN="nc $HOST $PORT"

while true
do

zenity --entry --entry-text="Type here" --text "Kirjoita Maanosa:" > $FILE
zenity --entry --entry-text="Type here" --text "Kirjoita Maanosa:" > $FILE1|| end


		zenity --info --title "`$GETTEXT \"Nykyinen Päivämäärä Ja Aika:\"`" --text "`cat $FILE2`" || end


done
