#!/bin/bash

echo `gettext -d timecl "Application stared. Press Ctrl+c to exit."`
 while [ True ]
 do
 	echo `gettext -d timecl "Enter the zone:"`
 	read Z
 	echo `gettext -d timecl "Enter the city:"`
 	read C
 	ZONE="$Z/$C"
 	
 			time=$(export TZ=`cat ZONE`;date)
    cty=`cat /tmp/input.$$`
 		
 		echo '"Local Time in $C, $Z is: $time"'
 
 	
done
